{
  "name": "ceviche",
  "amdName": "ceviche",
  "version": "0.1.0",
  "description": "Something something virtual DOM.",
  "source": "src/index.js",
  "module": "dist/ceviche.es.js",
  "main": "dist/ceviche.js",
  "umd:main": "dist/ceviche.umd.js",
  "scripts": {
    "build": "npm run -s transpile && npm run -s size",
    "transpile": "rollup -c --environment FORMAT:umd && rollup -c --environment FORMAT:cjs && rollup -c --environment FORMAT:es",
    "size": "strip-json-comments --no-whitespace dist/ceviche.js | gzip-size",
    "test": "eslint src"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor",
    "rules": {
      "eqeqeq": [1, "smart"],
      "guard-for-in": 0,
      "prefer-rest-params": 0
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "keywords": [
    "ceviche",
    "Virtual DOM",
    "VDOM",
    "DOM"
  ],
  "author": "Jason Miller <jason@developit.ca>",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^4.6.1",
    "eslint-config-synacor": "^2.0.2",
    "gzip-size": "^3.0.0",
    "rollup": "^0.49.2",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-post-replace": "^1.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "strip-json-comments-cli": "^1.0.1",
    "uglify-js": "^2.8.29"
  }
}
